<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/spokenTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#80000000"
        android:gravity="center"
        android:padding="8dp"
        android:text="Detected Objects will be shown here"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name" />

    <include layout="@layout/vision_assist_button" />

    <!-- Circular VISION ASSIST Button with Transparent Style -->
    <Button
        android:id="@+id/stopDetectionButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="@drawable/transparent_button"
        android:text="VISION ASSIST"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/transparent_button"
        android:text="BACK"
        android:textSize="18sp"
        android:textColor="@android:color/white"/>
</RelativeLayout>