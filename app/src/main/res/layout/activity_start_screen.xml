<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Exit Button -->
    <Button
        android:id="@+id/exitButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:text="Exit"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"/>

    <!-- About Button -->
    <Button
        android:id="@+id/aboutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/transparent_button"
        android:text="Settings"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="80dp"/>

    <!-- Vision Assist Button (Start Detection) -->
    <Button
        android:id="@+id/startDetectionButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/transparent_button"
        android:text="VISION ASSIST"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/aboutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginTop="50dp"/>

    <!-- Emergency Button -->
    <Button
        android:id="@+id/emergencyContactButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/transparent_button"
        android:text="Emergency"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/startDetectionButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.35"
        android:layout_marginTop="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>